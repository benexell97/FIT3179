{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A population pyramid for the US in 2000.",
  "data": { "url": "https://raw.githubusercontent.com/benexell97/FIT3179/gh-pages/data/suicide_per_age.csv"},
  "transform": [
    {"calculate": "datum.Male", "as": "male_suicides"},
    {"calculate": "datum.Female", "as": "female_suicides"}
  ],
  "spacing": 0,
  "hconcat": [{
    "title": "Female",
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "Age", "axis": null, "type":"nominal",
        "sort": ["5-14 years","15-24 years","25-34 years","35-54 years","55-74 year","75+ year"]
      },
      "x": {
        "field": "female_suicides",
        "title": "Suicides",
        "axis": {"format": "s"}
      },
      "color":{
        "value":"#D81B60"
      }

    }
  }, {
    "width": 20,
    "view": {"stroke": null},
    "mark": {
      "type": "text",
      "align": "center"
    },
    "encoding": {
      "y": {
        "field": "Age", "type": "nominal", "axis": null,
        "sort": ["5-14 years","15-24 years","25-34 years","35-54 years","55-74 year","75+ year"]
      },
      "text": {"field": "age", "type": "nominal"}
    }
  }, {
    "title": "Male",
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "Age", "title": null
        "axis": null
      },
        "field": "male_suicides",
        "title": "Suicides",
        "axis": {"format": "s"},
        "sort": ["5-14 years","15-24 years","25-34 years","35-54 years","55-74 year","75+ year"]
      },
      "color":{
        "value":"#1E88E5"
      }
    }
  }],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}
